<% provide(:title, 'Użytkownicy') %>
<h1>Wszyscy użytkownicy</h1>


<div class="color">
<%= form_tag users_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag " Znajdź osobę ", :name => nil, class: "btn btn-lg btn-primary" %>
  </p>
<% end %>
</div>

<ul class="users">
  <%= render @users %>
</ul>


